include basic/head
body
    include basic/header
    .album.py-5.bg-light
        .container
            .row
                .col-md-12
                    div(class=" card mb-4 box-shadow")
                        .card-body
                            form(action="", method="get", id="addToMongo")
                                div(class="form-group")
                                    label(for="tittleNotes") Tittle notes
                                    input(type="text", id="tittleNotes", name="tittleNotes", value="", class="form-control")
                                    small(id="emailHelp", class="form-text text-muted") Creat your plans
                                div(class="form-group")
                                    label(for="descriptionNotes") Description notes
                                    input(type="text", id="descriptionNotes" name="descriptionNotes", value="", class="form-control")
                                div(class="form-group")
                                    label(for="inputGroupFile01") Example file input
                                    input(type="file", class="form-control-file", id="inputGroupFile01", name="myFile")
                                .d-flex.justify-content-between.align-items-center
                                    .btn-group
                                        button.btn.btn-sm.btn-outline-secondary(type="submit", id="addToMongoTWO") Save
