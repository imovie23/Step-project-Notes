include basic/head
body
    include basic/header
    .album.py-5.bg-light
        .container
            .row
                .col-md-12
                    div(class=" card mb-4 box-shadow", id=`${note._id}`)
                        if note.imageName.length > 0
                            img.card-img-top(src=`http://localhost:3001/notes/image/${note.imageName}`, alt='imageNotes', style='height: 225px; width: 100%; display: block; background-size: cover;', data-holder-rendered='true', id="img")
                        .card-body
                            form(action="", method="get", id="addToMongo")
                                div(class="form-group")
                                    label(for="tittleNotes") Tittle notes
                                    input(type="text", class="form-control", id="tittleNotes", placeholder="Enter title", name="tittleNotes", value=`${note.title}`)
                                    small(id="emailHelp", class="form-text text-muted") Change your plans
                                div(class="form-group")
                                    label(for="descriptionNotes") Description notes
                                    input(type="text", class="form-control", id="descriptionNotes" name="descriptionNotes", value=`${note.description}`)
                                    input(type="hidden" name="id", value=note._id.toString())

                                .d-flex.justify-content-between.align-items-center
                                    .btn-group
                                        button.btn.btn-sm.btn-outline-secondary(type="submit") Save
                                        button.btn.btn-sm.btn-outline-secondary(type="submit", value="Delete", onClick="onBtnDeleteClick" + `(event, '${note._id}', '${note.imageId}')`) Delete notes
                                        button.btn.btn-sm.btn-outline-secondary(type="text", value=note.imageId, name=note.imageName, onClick="onBtnChangeClick" + `(event)`, id="imageChange") Change image
                                        input(type="file", name="myFile", style="display:none;" id="fileChange" onchange="onFileChange" + `(event, null, '${note.imageId}')`)
                                    small.text-muted=`${Math.floor((((new Date()) - (new Date(note.updated_at).getTime())) / 1000) / 60)} min ago`

include basic/footer
